{
  "openapi": "3.0.3",
  "info": {
    "title": "Todo",
    "description": "Сервис для todo-карточек",
    "version": "1.0.0"
  },
  "host": "localhost:8000",
  "schemes": [
    "http"
  ],
  "paths": {
    "/task": {
      "put": {
        "description": "Добавление новой карточки",
        "responses": {
          "405": {
            "description": "Метод не найден"
          },
          "200": {
            "description": "Карточка создана"
          }
        },
        "parameters": [
          {
            "name": "body",
            "description": "new card",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title":{
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }

              }
            }
          }
        ]
      },
      "post": {
        "description": "Изменение карточки",
        "responses": {
          "405": {
            "description": "Метод не найден"
          },
          "200": {
            "description": "Карточка изменена"
          }
        },
        "parameters": [
          {
            "name": "body",
            "description": "new card",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "id":{
                  "type": "string"
                },
                "title":{
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }

              }
            }
          }
        ]
      },
      "get": {
        "description": "Получение списка всех карточке",
        "responses": {
          "405": {
            "description": "Метод не найден"
          },
          "200": {
            "description": "Карточка создана"
          }
        }
      },
      "delete": {
        "description": "Удаление карточки",
        "responses": {
          "405": {
            "description": "Метод не найден"
          },
          "200": {
            "description": "Карточка создана"
          }
        },
        "parameters": [
          {
            "name": "body",
            "description": "delete card",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "id":{
                  "type": "string"
                }
              }
            }
          }
        ]
      }
    }
  }
}
